<h1>Listing notifiers</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Notify after</th>
      <th>Type</th>
      <th>Details</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notifiers.each do |notifier| %>
      <tr>
        <td><%= notifier.user %></td>
        <td><%= notifier.notify_after %></td>
        <td><%= notifier.type %></td>
        <td><%= notifier.details %></td>
        <td><%= link_to 'Show', notifier %></td>
        <td><%= link_to 'Edit', edit_notifier_path(notifier) %></td>
        <td><%= link_to 'Destroy', notifier, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

