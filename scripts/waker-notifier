#!/usr/bin/env ruby
require_relative '../config/environment'

logger = Logger.new(STDOUT)
Rails.logger = logger

while true
  begin
    logger.debug '========== Start loop =========='
    EscalationQueue.process
    NotificationQueue.process
  rescue => err
    backtrace = err.backtrace.join("\n")
    logger.error "#{err}\n#{backtrace}"
  end

  sleep 10
end

